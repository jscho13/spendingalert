  </head>

  <body>
		<!-- Wrapper -->
		<div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar" class="inactive">
        <div class="inner">
          <!-- Menu -->
          <nav id="menu">
            <header class="major">
              <h2>Menu</h2>
            </header>
            <ul>
              <% if current_user %>
                <li><a href="/dashboard">Monthly Spending</a></li>
                <li><a href="/budget">Set Spending Limit</a></li>
                <li><a href="/accounts">Add Accounts</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/checkout">Premium</a></li>
                <li><a href="/users/sign_out" data-method="delete">Log Out</a></li>
              <% else %>
                <li><a href="/">Why Choose Us?</a></li>
                <li><a href="/users/sign_up">60 Day Free Trial</a></li>
                <li><a href="/users/sign_up">Sign Up</a></li>
                <li><a href="/users/sign_in">Log In</a></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>

			<div class="inner">
				<!-- Header -->
				<header id="header">
          <% if current_user %>
            <a href="/dashboard" class="logo"><img src="/spendingalertlogo4.png"></img></a>
          <% else %>
            <a href="/" class="logo"><img src="/spendingalertlogo4.png"></img></a>
          <% end %>
				</header>

				<main>
					<%= render "layouts/flash" %>
					<%= yield %>
				</main>
			</div>
		</div>

    <!-- Footer -->
    <footer>
      <section class="footer-links">
        <header class="major">
          <h3><a class="no-line" href="#">WHY CHOOSE US</a></h3> 
        </header>
        <header class="major">
          <h3><a class="no-line" href="/users/sign_up">60 DAY FREE TRIAL</a></h3> 
        </header>
        <header class="major">
          <% if current_user %>
            <h3><a class="no-line" href="/users/sign_out" data-method="delete">LOG OUT</a></h3>
          <% else %>
            <h3><a class="no-line" href="/users/sign_in">LOG IN</a></h3> 
          <% end %>
        </header>
        <header class="major">
          <h3><a class="no-line" href="/blog">BLOG</a></h3> 
        </header>
      </section>

      <p class="copyright">
        &copy; SpendingAlert is operated by Spending Alert LLC. All rights reserved.<br> Terms, conditions, features, pricing are subject to change without notice.
      </p>
      <p class="text-center">
        <a class="text-white" href="/terms_and_conditions">Terms of Use</a> | <a class="text-white" href="/privacy_policy">Privacy Policy</a>
      </p>
      <div class="footer-logo"><img src="/spendingalertlogo-white.png"></img></div>
    </footer>
  </body>

